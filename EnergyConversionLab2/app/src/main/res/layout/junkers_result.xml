<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whenclicked_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/junkers_result_ll"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/junkers_result_tv"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@null"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/junkers_result_ll_two"
        android:weightSum="2"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/junkers_result_ll"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/junkers_result_b_options"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Report Options"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:background="@drawable/button_blue"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/junkers_result_ll_three"
        android:weightSum="2"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/junkers_result_ll_two"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/junkers_result_b"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Close"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:background="@drawable/button_blue"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>